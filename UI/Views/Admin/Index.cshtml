@model List<AppUser>
@{
    ViewData["Title"] = "SysAdmin";
    Layout = "~/Views/Shared/_SysAdminLayout.cshtml";

}
<h1>Kullanıcı Bilgileri</h1>
<table class="table table-bordered table-striped">
    <tr>
        <th>User Id</th>
        <th>User Name</th>
        <th>Email</th>
        <th>Rol Atama</th>
        <th>Rol </th>

    </tr>
    @if (Model.Count() == 0)
    {
        <tr>
            <td colspan=3>Hiç bir üye yoktur</td>
        </tr>
    }
    else
    {
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.UserName</td>
                <td>@item.Email</td>
               

                <td><a class="btn btn-success" asp-action="RoleAssign" asp-route-id="@item.Id">  Rol ata</a> </td>

            </tr>
        }
    }
</table>